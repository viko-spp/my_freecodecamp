function largestOfFour(arr) {
  // You can do this!
  
  var result = [];
  //var num = 0; - неверное решение
  for(var i = 0; i < arr.length; i++){
    var num = 0;//важно(!) вложенность данной переменной обнуляет ее до 0 как только мы проходимся полностью по 
    подмассиву, если бы данная переменная стояла бы в начале функции то ее значение изначально было бы последним запушенным 
    for(var x = 0; x < arr[i].length; x++){
      if(num < arr[i][x]){
        num = arr[i][x];
      }
      
    }
    result.push(num);
  }
  return result;
}

largestOfFour([[13, 27, 18, 26], [4, 5, 1, 3], [32, 35, 37, 39], [1000, 1001, 857, 1]]);

//в первом подмассиве переменная num = 27,если бы переменная num стояла выше то ее значение было бы 27 и во втором подмассиве
// не найдя значения больше, push в массив был бы так же 27,что является нарушением условий задачи 
